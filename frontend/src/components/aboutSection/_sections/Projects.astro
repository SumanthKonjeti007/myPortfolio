<style>
    .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.projects-container {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(100%, 1fr);
    transition: transform 0.3s ease;
}

.project-card {
    transition: transform 0.3s ease;
    position: relative;
    overflow: hidden;
}

.project-image {
    transition: transform 0.3s ease, filter 0.3s ease;
    filter: blur(0);
}

.project-card:hover .project-image {
    transform: scale(1.05);
    filter: blur(5px);
}

.project-title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.project-card:hover .project-title {
    opacity: 1;
}

.explore-more {
    margin-top: 20px;
    text-align: center;
}

.explore-more a {
    font-size: 1.5rem;
    color: #00aaff;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
}

.explore-more a:hover {
    color: #005f80;
}

</style>