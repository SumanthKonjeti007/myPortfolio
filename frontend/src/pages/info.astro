<style>
   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Roboto:wght@400;500&display=swap');

body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-color: #121212;
    color: #e0e0e0; /* Light grey color for all text */
}

.about-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    overflow: hidden;
}

.header-section {
    text-align: center;
    margin-top: 50px;
}

.header-section h1 {
    font-size: 3em;
    color: #ffffff; /* White color for the main header */
    font-family: 'Poppins', sans-serif;
}

.svg-background {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
}

.about-me-section {
    margin-top: 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    position: relative;
    z-index: 1; /* To keep text above the SVG */
}

.about-me-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
}

.text-content {
    max-width: 60%;
}

.text-content h2 {
    font-size: 2.5em;
    color: #ffffff; /* White color for subheadings */
    font-family: 'Poppins', sans-serif;
    margin-bottom: 20px;
}

.text-content p {
    line-height: 1.8;
    color: #e0e0e0; /* Light grey color for paragraphs */
    margin-bottom: 20px;
}

.image-content {
    max-width: 30%;
    text-align: center;
}

.image-content img {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

.projects-section {
    margin-top: 100px;
    padding: 50px;
    background-color: #1a1a1a;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    text-align: center;
}

.projects-section h3 {
    font-size: 2.5em;
    margin-bottom: 30px;
    color: #ffffff; /* White color for section titles */
    font-family: 'Poppins', sans-serif;
}

.projects-gallery {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 20px;
}

.project {
    background-color: #2a2a2a;
    padding: 20px;
    border-radius: 10px;
    width: 30%;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.project h4 {
    font-size: 1.5em;
    color: #ffffff; /* White color for project titles */
    margin-bottom: 10px;
}

.project p {
    font-size: 1em;
    color: #e0e0e0; /* Light grey color for project descriptions */
}

.github-link {
    margin-top: 40px;
    font-size: 1.2em;
    color: #ffffff; /* White color for GitHub link */
    text-decoration: none;
    transition: color 0.3s ease;
}

.github-link:hover {
    color: #cccccc; /* Slightly darker grey on hover */
}

.footer-section {
    background-color: #1a1a1a;
    padding: 40px 20px;
    margin-top: 50px;
    color: #e0e0e0;
}

.footer-content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.footer-column {
    flex: 1;
    min-width: 250px;
    margin: 20px;
}

.footer-column h4 {
    font-size: 1.5em;
    color: #ffffff; /* White color for footer titles */
    margin-bottom: 15px;
}

.footer-column p, .footer-column a {
    color: #e0e0e0;
    text-decoration: none;
}

.footer-bottom {
    text-align: center;
    padding-top: 20px;
    color: #666666;
}

.footer-bottom p {
    margin: 0;
}

.social-links {
    display: flex;
    gap: 20px;
}

.social-icon {
    color: #ffffff; /* White color for social icons */
    font-size: 1.2em;
    text-decoration: none;
    transition: color 0.3s ease;
}

.social-icon:hover {
    color: #cccccc; /* Slightly darker grey on hover */
}

@media (max-width: 1024px) {
    .about-me-content {
        flex-direction: column;
    }

    .text-content {
        max-width: 100%;
    }

    .image-content {
        max-width: 100%;
        margin-top: 20px;
    }

    .projects-gallery {
        flex-direction: column;
    }

    .project {
        width: 100%;
        margin-bottom: 20px;
    }
}
</style>
