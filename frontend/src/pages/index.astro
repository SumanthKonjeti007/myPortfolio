<style is:global>
    .slide-up { animation: slideUp .75s forwards; }
    .slide-up-hero { animation: slideUpHero .75s forwards; }

    .active-sidebar { 
        position: relative;
        color: #fff;
    }
    .active-sidebar::before {
        content: 'â€¢';
        color: "#fff";
        position: absolute;
        top: 50%;
        left: -8px;
        transform: translateY(-50%);
    }

    @keyframes slideUp {
        from { transform: translateY(70px);  }
        to   { transform: translateY(0px); }
    }
    
    @keyframes slideUpHero {
        from { transform: translate(-50%,70px);  }
        to   { transform: translate(-50%,0px); }
    }

    /* Global CSS for Background Toggle Button */
    .toggle-background {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        padding: 10px;
        cursor: pointer;
        /* z-index: 9999; Ensure it's on top */
        transition: background-color 0.3s ease;
    }

    .toggle-background:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .toggle-background svg {
        fill: none;
        stroke: #fff;
        stroke-width: 2px;
    }

    /* Set initial background and text colors */
    body {
        background-color: black;
        color: white;
        font-family: Arial, sans-serif; /* Optional: Set a global font */
        margin: 0;
        padding: 0;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
</style>